{
  "name": "leekwarssync",
  "displayName": "LeekWarsSync",
  "description": "synchronization tool for your leekwars scripts",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "leekwarssync.init",
        "title": "leekwars Sync: Initialize extension"
      }
    ],
    "configuration": {
      "title": "LeekWars Sync",
      "properties": {
        "leekwarssync.autofetch": {
          "type": "boolean",
          "default": "false",
          "description": "Automatically fetch your AIs"
        },
        "leekwarssync.autofetchInterval": {
          "type": "number",
          "default": 300,
          "description": "Interval betwenn each automatic fetch, in seconds"
        },
        "leekwarssync.username": {
          "type": "string",
          "default": "",
          "description": "Your username in LeekWars"
        },
        "leekwarssync.password": {
          "type": "string",
          "default": "",
          "description": "Your password in LeekWars"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.92.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  }
}
